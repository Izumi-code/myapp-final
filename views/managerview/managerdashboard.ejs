<!DOCTYPE html>
<html>
<head>
  <title>Admin Management Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css">
  <style>
    /* Custom styles for the side panel */
    .side-panel {
      background-color: #f8f9fa;
      padding: 20px;
    }

    .side-panel ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .side-panel li {
      margin-bottom: 10px;
    }

    .side-panel a {
      display: block;
      padding: 10px;
      color: #333;
      text-decoration: none;
      transition: background-color 0.3s;
    }

    .side-panel a:hover {
      background-color: #e9ecef;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Side panel -->
      <div class="col-lg-3 col-md-4">
        <div class="side-panel">
          <ul>
            <li><a href="/register">Create User</a></li>
            <li><a href="/admin/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
          <h5>Records</h5>
          <ul>
            <li><a href="/admin/admindashboard">Admin Records</a></li>
            <li><a href="/admin/managerdashboard">Manager Records</a></li>
            <li><a href="/admin/userdashboard">User Records</a></li>
          </ul>
        </div>
      </div>

      <!-- Main content -->
      <div class="col-lg-9 col-md-8">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <a class="navbar-brand" href="/adminview/admindashboard">Manager Dashboard</a>
          </div>
        </nav>

        <div class="container mt-5">
          <h1>Manager Dashboard</h1>
          <form class="mt-3 mb-3" action="/adminview/admindashboard" method="get">
            <div class="input-group">
              <input type="text" name="q" class="form-control" placeholder="Search by name or email address" value="<%= query || '' %>">
              <button type="submit" class="btn btn-primary">Search</button>
              </div>
            </form>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th> 
                  <th>Role</th> 
                </tr>
              </thead>
              <tbody>
                <% let counter = 1 %>
                <% const filteredUsers = users?.filter(user => user.usertype === 'Admin') || [] %>
                <% if (filteredUsers.length > 0) { %>
                  <% filteredUsers.forEach(function(user) { %>
                    <tr>
                      <td><%= counter %></td>
                      <td><%= user.firstname %> <%= user.lastname %></td>
                      <td><%= user.email %></td> 
                      <td><%= user.usertype %></td>
                    </tr>
                    <% counter++ %>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="8">No users found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          
          <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js"></script>
        </body>
      </html>
