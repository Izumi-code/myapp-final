<!DOCTYPE html>
<html>
<head>
  <title>Manager Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css">
  <style>
    /* Custom styles for the side panel */
    .side-panel {
      background-color: #f8f9fa;
      padding: 20px;
    }

    .side-panel ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .side-panel li {
      margin-bottom: 10px;
    }

    .side-panel a {
      display: block;
      padding: 10px;
      color: #333;
      text-decoration: none;
      transition: background-color 0.3s;
    }

    .side-panel a:hover {
      background-color: #e9ecef;
    }

    /* Custom styles for the navbar */
    .navbar {
      background-color: #f8f9fa;
      padding: 10px 20px;
    }

    .navbar-brand {
      color: #333;
      font-size: 1.5rem;
      font-weight: bold;
      text-decoration: none;
    }

    .search-form {
      margin-top: 20px;
    }

    .search-form .form-control {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }

    .search-form .btn {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
    }

    /* Custom styles for the table */
    .custom-table {
      border: none;
    }

    .custom-table thead {
      background-color: #343a40;
      color: #fff;
    }

    .custom-table th {
      font-weight: bold;
    }

    .custom-table td {
      font-weight: normal;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Side panel -->
      <div class="col-lg-3 col-md-4">
        <div class="side-panel">
          <h5>Records</h5>
          <ul>
            <!-- <li><a href="/admin/admindashboard">Admin Records</a></li> -->
            <li><a href="/managerview/managerRecord">Manager Records</a></li>
            <li><a href="/managerview/userRecord">User Records</a></li>
          </ul>
        </div>
      </div>

      <!-- Main content -->
      <div class="col-lg-9 col-md-8">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <a class="navbar-brand" href="/managerview/managerdashboard">Manager Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ms-auto">
                <!-- <li class="nav-item">
                  <a class="nav-link" href="/register">Create User</a>
                </li> -->
                <li class="nav-item">
                  <a class="nav-link" href="/managerview/managerProfile">Profile</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>

        <div class="container mt-5">
          <form class="search-form" action="/managerview/managerdashboard" method="get">
            <div class="input-group">
              <input type="text" name="q" class="form-control" placeholder="Search" value="<%= query || '' %>">
              <button type="submit" class="btn btn-primary">Search</button>
            </div>
          </form>
          <table class="table custom-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Contact Number</th>
                <th>Email</th> 
                <!-- <th>Password</th>  -->
                <th>Role</th> 
              </tr>
            </thead>
            <tbody>
              <% let counter = 1 %>
              <% const filteredUsers = users || [] %>
              <% if (filteredUsers.length > 0) { %>
                <% filteredUsers.forEach(function(user) { %>
                  <tr>
                    <td><%= counter %></td>
                    <td><%= user.firstname %> <%= user.lastname %></td>
                    <td><%= user.gender %></td> 
                    <td><%= user.contactnumber %></td> 
                    <td><%= user.email %></td> 
                    <!-- <td><%= user.password.substr(0, 8) + '...' %></td> -->
                    <td><%= user.usertype %></td>
                  </tr>
                  <% counter++ %>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="6">No users found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js"></script>
      </body>
    </html>
